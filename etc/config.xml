<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <flowpayment>
                <active>1</active>
                <model>FlowCommerce\FlowConnector\Model\Payment\FlowPaymentMethod</model>
                <title>Flow Payment</title>
                <order_status>pending_payment</order_status>
            </flowpayment>
        </payment>
        <carriers>
            <flowshipping>
                <active>1</active>
                <sallowspecific>0</sallowspecific>
                <model>FlowCommerce\FlowConnector\Model\Carrier\FlowShippingMethod</model>
                <name>Flow Shipping</name>
                <title>Flow Shipping</title>
            </flowshipping>
        </carriers>
        <flowcommerce>
            <flowconnector>
                <enabled>0</enabled>
                <invoice_event>1</invoice_event>
                <invoice_email>1</invoice_email>
                <shipment_event>1</shipment_event>
                <shipment_email>1</shipment_email>
            </flowconnector>
        </flowcommerce>
    </default>
</config>

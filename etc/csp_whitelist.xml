<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="flow-cdn" type="host">http://cdn.flow.io/</value>
                <value id="flow-cdn-secure" type="host">https://cdn.flow.io/</value>
                <value id="beacon-riskified" type="host">http://beacon.riskified.com/</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="flow-api" type="host">https://api.flow.io/</value>
                <value id="riskified-connect" type="host">https://c.riskified.com/</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="riskified-img" type="host">http://img.riskified.com/</value>
                <value id="flow-beacon" type="host">https://beacon.flow.io/</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>

